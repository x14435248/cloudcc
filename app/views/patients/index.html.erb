<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Dateofbirth</th>
      <th>Address</th>
      <th>Phonenumber</th>
      <th>Infection</th>
      <th>Injury</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.firstname %></td>
        <td><%= patient.lastname %></td>
        <td><%= patient.dateofbirth %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phonenumber %></td>
        <td><%= patient.infection %></td>
        <td><%= patient.injury %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path %>
<%= form_tag(patients_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Patients" %>
<%= submit_tag "Search" %>
<% end %>

<% if @patients.present? %>
  <%= render @patients %>
<% else %>
  <p>There are no patients containing the term(s) <%= params[:search] %>.</p>
<% end %>